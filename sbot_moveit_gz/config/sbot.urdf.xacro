<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="sbot">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import sbot urdf file -->
    <xacro:include filename="$(find sbot_description)/urdf/scorbot.urdf.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="sbot.ros2_control.xacro" />


    <xacro:sbot_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>